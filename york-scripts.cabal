name:                york-scripts
version:             0.1.0.0
synopsis:            Scripts for data processing.
-- description:         
license:             Apache-2.0
license-file:        LICENSE
author:              Eric Rochester
maintainer:          erochest@virginia.edu
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Data
                     , Parsing
                     , Types
                     , Utils
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9
                     , aeson                >= 0.8  && < 0.9
                     , bytestring           >= 0.10 && < 0.12
                     , cassava              >= 0.4  && < 0.5
                     , directory            >= 1.2  && < 1.3
                     , filepath             >= 1.4  && < 1.5
                     , hashable             >= 1.2  && < 1.3
                     , lens                 >= 4.9  && < 4.10
                     , lens-aeson           >= 1.0  && < 1.1
                     , semigroups           >= 0.16 && < 0.17
                     , text                 >= 1.2  && < 1.3
                     , time                 >= 1.5  && < 1.6
                     , unordered-containers >= 0.2  && < 0.3
  hs-source-dirs:      lib
  default-language:    Haskell2010

executable york-scripts
  main-is:             Main.hs
  other-modules:       Opts
  -- other-extensions:    
  build-depends:       base                 >= 4.8  && <5
                     , york-scripts
                     , aeson                >= 0.8  && < 0.9
                     , bifunctors           >= 4.2  && < 4.3
                     , bytestring           >= 0.10 && < 0.12
                     , cassava              >= 0.4  && < 0.5
                     , cassava-conduit      >= 0.2  && < 0.4
                     , conduit              >= 1.2  && < 1.4
                     , conduit-combinators  >= 1.0  && < 1.1
                     , conduit-extra        >= 1.1  && < 1.2
                     , hashable             >= 1.2  && < 1.3
                     , lens                 >= 4.9  && < 4.10
                     , lens-aeson           >= 1.0  && < 1.1
                     , optparse-applicative >= 0.11 && < 0.12
                     , semigroups           >= 0.16 && < 0.17
                     , text                 >= 1.2  && < 1.3
                     , text-format          >= 0.3  && < 0.4
                     , unordered-containers >= 0.2  && < 0.3
  hs-source-dirs:      src
  default-language:    Haskell2010


